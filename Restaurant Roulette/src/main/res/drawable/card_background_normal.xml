<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle"
            android:dither="true">

            <corners
                android:radius="1dp"/>

            <solid
                android:color="@color/shadow_card" />

        </shape>
    </item>

    <item android:bottom="1dp">
        <shape
            android:shape="rectangle"
            android:dither="true">

            <corners
                android:radius="1dp" />

            <solid
                android:color="@color/ics_white" />

            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </shape>
    </item>
</layer-list>