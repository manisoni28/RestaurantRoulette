<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light">-->
    <style name="AppTheme" parent="Theme.Light_blue">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearanceListviewHeader" parent="@android:style/TextAppearance.Medium">

    </style>

    <style name="listview_ratingbar" parent="@android:style/Widget.RatingBar" >
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/ratingbar_small_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_small_holo_light</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="summary_ratingbar" parent="listview_ratingbar">
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
    </style>

    <style name="price_level_rating_bar" >
        <item name="android:progressDrawable">@drawable/ratingbar_price_level</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_price_level</item>
    </style>

    <style name="summary_price_level" parent="summary_ratingbar">
        <item name="android:progressDrawable">@drawable/ratingbar_price_level</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_price_level</item>
    </style>

    <style name="button_blue" >
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/ics_white</item>
        <item name="android:minHeight">@dimen/minimum_button_height</item>
    </style>

</resources>
