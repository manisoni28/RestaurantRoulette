<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restaurant_selector_filter"
            android:id="@+id/selector_filter_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <include
            android:id="@+id/restaurant_genre_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/restaurant_genre_spinner"
            android:layout_below="@+id/selector_filter_text"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/margin_horizontal_restaurant_row"
            android:layout_marginLeft="@dimen/margin_horizontal_filter_indent"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restaurant_selector_button"
            android:id="@+id/btn_select_restaurant"
            android:layout_below="@+id/restaurant_genre_spinner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_horizontal_restaurant_row"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/restaurant_selector_answer"
            android:layout_below="@id/btn_select_restaurant"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_horizontal_restaurant_row"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/restaurant_selector_summary"
            android:layout_below="@id/restaurant_selector_answer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_horizontal_restaurant_row"/>

    </RelativeLayout>

</ScrollView>