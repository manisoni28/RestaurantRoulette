<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/ics_gray">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/restaurant_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/restaurant_name"
            android:background="@drawable/card_background_normal" />

        <include
            android:id="@+id/restaurant_genre_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/restaurant_genre_spinner"
            android:layout_below="@+id/restaurant_name_layout"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/margin_horizontal_restaurant_row"/>

        <include
            android:id="@+id/restaurant_rating_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/restaurant_rating_bar"
            android:layout_below="@+id/restaurant_genre_spinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/margin_horizontal_restaurant_row" />

        <include
            android:id="@+id/restaurant_notes_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/restaurant_notes"
            android:layout_below="@id/restaurant_rating_bar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/margin_horizontal_restaurant_row" />

    </RelativeLayout>

</ScrollView>