<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/restaurant_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restaurant_name" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/restaurant_name"
            android:layout_alignBaseline="@+id/restaurant_name_text"
            android:layout_toRightOf="@+id/restaurant_name_text"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/margin_editText"
            android:inputType="textCapSentences" />

        <include
            android:id="@+id/restaurant_genre_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/restaurant_genre_spinner"
            android:layout_below="@+id/restaurant_name"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/margin_horizontal_restaurant_row"/>

        <include
            android:id="@+id/restaurant_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/restaurant_rating_bar"
            android:layout_below="@+id/restaurant_genre_spinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/margin_horizontal_restaurant_row" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restaurant_notes"
            android:id="@+id/restaurant_notes_text"
            android:layout_below="@+id/restaurant_rating_bar"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/margin_horizontal_restaurant_row" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:id="@+id/restaurant_notes"
            android:layout_below="@+id/restaurant_notes_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</ScrollView>